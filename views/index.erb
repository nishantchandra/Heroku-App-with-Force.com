<table class="table table-hover">
<tr><th>Account</th><th>ID</th><th>Currently Active</th><th>Phone</th></tr>
<% @accounts.each do |account| %>
  <tr>
     <td><%= account.Name %></td>
     <td><%= account.Id %></td>
     <td><%= account.Active__c %></td>
     <td><%= account.Phone %></td>
  </tr>
<% end %>
</table>

<table class="table table-hover">
<tr><th>Contact</th><th>ID</th></tr>
